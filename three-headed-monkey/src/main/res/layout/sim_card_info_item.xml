<?xml version="1.0" encoding="utf-8"?>

<!--<merge xmlns:android="http://schemas.android.com/apk/res/android">-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial"
            android:id="@+id/text_serial_number" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:paddingTop="5dp"
            android:id="@+id/text_country" android:layout_alignParentLeft="true" android:layout_below="@+id/text_serial_number"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operator"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/text_operator" android:layout_toRightOf="@+id/text_country" android:layout_below="@+id/text_serial_number" />
</RelativeLayout>

